Bridge mqtt:broker:mosquitto "MQTT Broker Mosquitto" @ "MQTT" [
    // Modify these settings as need to match your broker.
    host="localhost",
    port=1883,
    secure=false,
    clientID="openhab2",
    qos=0,
    retain=false,
    keep_alive_time=30000,
    reconnect_time=60000
    username="your_mqtt_username",
    password="your_mqtt_password"
    // Can also add username and password here if needed.
]